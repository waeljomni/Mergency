<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccidentAlert">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularMapImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/sample_google_map"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#8BC34A"
        app:civ_shadow_radius="10" />

    <TextView
        android:id="@+id/victimCurrentAddress"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/circularMapImage"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/navigateToAccidentBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="#2196F3"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="NAVIGATE"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>